generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int            @id @default(autoincrement())
  firstName    String
  lastName     String
  email        String         @unique
  phone        String         @unique
  role         String
  gender       String
  password     String
  deliverySite deliverySite[]
}

model deliverySite {
  id             Int              @id @default(autoincrement())
  country        String
  locationName   String
  user           User             @relation(fields: [agent], references: [id])
  agent          Int
  stuffingreport stuffingreport[]
}

model shipper {
  id       Int    @id @default(autoincrement())
  name     String
  location String
  email    String @unique
  phone    String @unique

  stuffingreportItems stuffingreportItems[]
}

model consignee {
  id       Int    @id @default(autoincrement())
  name     String
  location String
  email    String @unique
  phone    String @unique

  stuffingreportItems stuffingreportItems[]
}

model stuffingreport {
  id                  Int                   @id @default(autoincrement())
  code                String
  status              String
  origin              String
  deliverysite        deliverySite          @relation(fields: [destination], references: [id])
  destination         Int
  stuffingreportItems stuffingreportItems[]
}

model stuffingreportItems {
  id               Int            @id @default(autoincrement())
  container        stuffingreport @relation(fields: [stuffingreportid], references: [id])
  stuffingreportid Int
  shipper          shipper        @relation(fields: [shipperId], references: [id])
  shipperId        Int
  consignee        consignee      @relation(fields: [consigneeId], references: [id])
  consigneeId      Int
  code             String
  mark             String
  salesAgent       String
  noOfPkgs         Int
  typeOfPkg        String
  weight           Int
  line             Int
  handling         Int
  type             String
  cbm              Int
  description      String
  freight          Int
  blFee            Int
  jb               Int
  others           Int
  invoiceNo        String         @unique
  totalUsd         Int
  totalAed         Int
  invoice          Invoice[]
}

model Invoice {
  id                 Int                 @id @default(autoincrement())
  vat                Int                 @default(0)
  totalAmountInWords String
  details            stuffingreportItems @relation(fields: [detailsId], references: [invoiceNo])
  detailsId          String              @unique
   createdAt          DateTime            @default(now())      
}
