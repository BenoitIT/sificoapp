generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int            @id @default(autoincrement())
  firstName    String
  lastName     String
  email        String         @unique
  phone        String         @unique
  role         String
  gender       String
  password     String
  deliverySite deliverySite[]
}

model deliverySite {
  id             Int              @id @default(autoincrement())
  country        String
  locationName   String
  user           User             @relation(fields: [agent], references: [id])
  agent          Int
  stuffingreport stuffingreport[]
}

model shipper {
  id       Int    @id @default(autoincrement())
  name     String
  location String
  email    String @unique
  phone    String @unique
}

model consignee {
  id       Int    @id @default(autoincrement())
  name     String
  location String
  email    String @unique
  phone    String @unique
}

model stuffingreport {
  id          Int          @id @default(autoincrement())
  code        String
  status      String
  origin      String
  user        deliverySite @relation(fields: [destination], references: [id])
  destination Int
}
